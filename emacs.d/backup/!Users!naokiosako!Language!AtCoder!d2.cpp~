#include<bits/stdc++.h>
using namespace std;

int main(){
    int H, W;
    cin >> H >> W;
    string map[2*H];
    int ans =0, ans2=0;

    for(int i=0; i<H; i++){
	cin >> map[i];
    }

    for(int i=0; i<H; i++){
	for(int j=0; j<W; j++){
	    ans =0;
	    if(map[i][j] == '.'){
		ans++;
		
		for(int k=i-1;;k--){
		    if(k<0 || H<=k)
			break;
		    if(map[k][j] == '.')
			ans++;
		    else
			break;
		}
		for(int k=i+1;;k++){
		    if(k<0 || H<=k)
			break;
		    if(map[k][j] == '.')
			ans++;
		    else
			break;
		}

		for(int k=j-1;;k--){
		    if(k<0 || W<=k)
			break;
		    if(map[i][k] == '.')
			ans++;
		    else
			break;
		}
		for(int k=j+1;;k++){
		    if(k<0 || W<=k)
			break;
		    if(map[i][k] == '.')
			ans++;
		    else
			break;
		}		
	    }
	    ans2 = max(ans2, ans);
	}
    }

    cout << ans2 << endl;

    
    
}


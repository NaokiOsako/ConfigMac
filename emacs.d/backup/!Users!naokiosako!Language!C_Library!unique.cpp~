#include<bits/stdc++.h>
using namespace std;

int main(){
    string s;
    int N;
    cin >> s;
    cin >> N;
    vector<string> t;
    string tmp;

    for(int i=0; i<s.size(); i++){
	for(int j=1; j<=5; j++){
	    if(i+j >=s.size())
		break;
	    tmp = s.substr(i, j);
	    t.push_back(tmp);
	}
    }
    
    sort(t.begin(), t.end());
    unique(t.begin(), t.end());
    
    cout << t[N-1] <<endl;
    
}



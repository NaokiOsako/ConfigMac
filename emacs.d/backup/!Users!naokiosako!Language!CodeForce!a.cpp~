#include<bits/stdc++.h>
using namespace std;
int main(){
    int tmp=0, ans=0;
    string S;    
    cin >> S;

    for(int i=0; i<S.size(); i+=2){
	ans++;
    }

    for(int i=0; i<S.size(); i++){
	if(S[i] == '1')
	    tmp++;
    }

    if(S.size()%2==1 && tmp==1){
	ans--;
    }

    

    if(tmp == 0)
	cout << 0 <<endl;
    else
	cout << ans << endl;

}


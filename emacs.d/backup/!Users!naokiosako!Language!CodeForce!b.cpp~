#include<bits/stdc++.h>
using namespace std;

int main(){
    long long N, l, r, min=0, max=0;
    cin >> N >> l >> r;

    for(int i=0; i<N; i++){
	if(i < l)
	    min += pow(2, i);
	else
	    min += 1;
	if(i < r)
	    max += pow(2, i);
	else
	    max += pow(2, r-1);
    }

    cout << min << " " << max << endl;
    
}

